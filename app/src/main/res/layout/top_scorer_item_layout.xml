<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/playerName"
            style="@style/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abhishek Kotiyal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/countryName"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerName"
            android:layout_marginTop="2dp"
            android:text="India"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/countryFlag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/playerName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/countryName" />

        <TextView
            android:id="@+id/goalTxt"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/countryFlag"
            android:layout_marginTop="8dp"
            android:text="Goal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/assistText"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countryFlag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Assist"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/minutesPlayedTxt"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/countryFlag"
            android:layout_marginTop="8dp"
            android:text="Minutes Played"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goal"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/goalTxt"
            android:layout_marginTop="8dp"
            android:text="2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/assist"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assistText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/minutesPlayed"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/minutesPlayedTxt"
            android:layout_marginTop="8dp"
            android:text="73"
            android:textSize="18sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>