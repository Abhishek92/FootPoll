<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateText"
            style="@style/textViewStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="14-jul-2018"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateText"
            android:padding="10dp">

            <ImageView
            android:id="@+id/teamOneImg"
                android:layout_width="30dp"
                android:layout_height="30dp"

            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/teamOneTxt"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/teamOneImg"
            android:gravity="center_vertical"
            android:text="Russia"
            android:textSize="24sp" />


            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="VS"
                android:textSize="16sp"
                android:visibility="gone" />


            <TextView
            android:id="@+id/teamTwoTxt"
                style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/teamTwoImg"
            android:gravity="center_vertical"
            android:text="India"
                android:textSize="24sp" />

            <ImageView
            android:id="@+id/teamTwoImg"
                android:layout_width="30dp"
                android:layout_height="30dp"

            android:layout_alignParentRight="true"/>


            <TextView
                android:id="@+id/teamOneGoal"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamOneTxt"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/teamOneImg"
                android:gravity="center_vertical"
                android:text="3"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/teamTwoGoal"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamTwoTxt"
                android:layout_marginRight="16sp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/teamTwoImg"
                android:gravity="center_vertical"
                android:text="3"
                android:textSize="18sp" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>