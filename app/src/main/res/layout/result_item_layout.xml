<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            style="@style/textViewStyleWhite"
            android:layout_alignParentLeft="true"
            android:text="14-jul-2018"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/dateText">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teamOneImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/teamOneTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Russia"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/teamOneImg"
            android:layout_alignTop="@+id/teamOneImg"
            android:layout_alignBottom="@+id/teamOneImg"
            android:layout_marginLeft="8dp"
            style="@style/textViewStyle"/>

            <TextView
                android:id="@+id/teamOneGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="16sp"
                android:layout_alignTop="@+id/teamOneImg"
                android:layout_alignBottom="@+id/teamOneImg"
                android:layout_toRightOf="@+id/teamOneTxt"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                style="@style/textViewStyle"/>



            <TextView
                android:id="@+id/teamTwoGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="16sp"
                android:layout_alignTop="@+id/teamOneImg"
                android:layout_alignBottom="@+id/teamOneImg"
                android:layout_toLeftOf="@+id/teamTwoTxt"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                style="@style/textViewStyle"/>

        <TextView
            android:id="@+id/teamTwoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/teamTwoImg"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_alignTop="@+id/teamOneImg"
            android:layout_alignBottom="@+id/teamOneImg"
            android:layout_marginRight="8dp"
            android:text="India"
            style="@style/textViewStyle"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teamTwoImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"/>




        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>